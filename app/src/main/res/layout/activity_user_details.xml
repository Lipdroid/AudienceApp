<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apom.audienceapp.UserDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="650px">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:background="@color/black" />

            <com.apom.audienceapp.customViews.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dummy_pic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.apom.audienceapp.customViews.CustomFontTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="Lipu Hossain"
                    android:textColor="@color/black"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <com.apom.audienceapp.customViews.CustomFontTextViewLight
                    android:id="@+id/designation"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Senior Android Ios developer at Oceanize"
                    android:textColor="@color/black"
                    android:textSize="50px"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:background="@color/common_gray"
            android:weightSum="3">

            <com.apom.audienceapp.customViews.CustomFontTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="2"
                android:text="0 \nSuccess"
                android:textColor="@color/black"
                android:textSize="50px"
                android:textStyle="bold" />

            <com.apom.audienceapp.customViews.CustomFontTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="2"

                android:text="0 \nFailure"
                android:textColor="@color/black"
                android:textSize="50px"
                android:textStyle="bold" />

            <com.apom.audienceapp.customViews.CustomFontTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2px"
                android:layout_weight="1"
                android:background="@color/white"

                android:gravity="center"
                android:maxLines="2"
                android:text="0 \nReffered"
                android:textColor="@color/black"
                android:textSize="50px"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
