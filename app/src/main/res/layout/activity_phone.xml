<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.apom.audienceapp.PhoneActivity">


    <com.apom.audienceapp.customViews.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100px"
        android:src="@drawable/dummy_pic"
        android:layout_marginTop="200px" />

    <com.apom.audienceapp.customViews.CustomFontTextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginBottom="50px"
        android:gravity="center"
        android:lineSpacingExtra="20px"
        android:tag="100"
        android:text="Welcome \nLipu Hossain"
        android:textSize="100px" />

    <com.apom.audienceapp.customViews.CustomFontTextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:gravity="center"
        android:tag="40"
        android:text="What number can people use to reach you?"
        android:textColor="@android:color/darker_gray"
        android:textSize="40px" />

    <com.apom.audienceapp.customViews.EditTextWithFont
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_below="@+id/info_text"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:gravity="center"
        android:inputType="phone"
        android:textColorHint="@color/white"
        android:hint="Phone Number" />

    <ImageView
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/info_text"
        android:layout_marginRight="90px"
        android:layout_marginTop="50px"
        android:src="@drawable/cancel_icon_gray" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="350px"
        android:layout_height="150px"
        android:layout_below="@+id/et_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50px"
        android:text="Continue"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <com.apom.audienceapp.customViews.CustomFontTextView
        android:id="@+id/termsinfo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_continue"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:gravity="center"
        android:tag="35"
        android:text="By continuing,you are indicating that you are agreeto the Privacy policy and Terms"
        android:textColor="@android:color/darker_gray"
        android:textSize="35px" />

</RelativeLayout>
